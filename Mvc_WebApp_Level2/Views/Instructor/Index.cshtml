@using Mvc_WebApp_Level2.Models
@model List<Instructor>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{

}
<table style="border: black 1px solid;" class="table table-bordered table-hover">
    <thead>
    <th style="width: 20%">Id</th>
    <th style="width: 20%">Name</th>
    <th style="width: 20%">Image</th>
    <th style="width: 20%">Salary</th>
    <th style="width: 20%">Address</th>
    </thead>
    <tbody>
        @foreach (Instructor item in Model)
        {
            <tr>
                <td style="width: 20%">@item.Id</td>
                <td style="width: 20%">@item.Name</td>
                <td style="width: 20%">@item.Image</td>
                <td style="width: 20%">@item.Salary</td>
                <td style="width: 20%">@item.Address &nbsp; <a href="/Home/Details/@item.Id" class="btn btn-info">Show</a></td>
            </tr>
        }
    </tbody>
</table>